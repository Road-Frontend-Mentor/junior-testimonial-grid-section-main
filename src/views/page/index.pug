include ../blocks/user
include ../blocks/card
include ../data/cards

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:wght@500;600&display=swap" rel="stylesheet")
    link(rel="stylesheet", href="/dist/css/style.css")
    title Document
  body
    main
      each cardInfo in cardsInfo
        +card(cardInfo.title, cardInfo.comment, cardInfo.classModifier)
          +user(cardInfo.header.pictureUrl, cardInfo.header.authorName, cardInfo.header.profession, cardInfo.header.classModifier, cardInfo.header.imgModifier)
